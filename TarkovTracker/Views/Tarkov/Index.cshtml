@using TarkovTracker.Controllers
@model List<UserRequirementsItem>


    <h2>Список элементов</h2>

<div class="item-list">
    @foreach (var item in Model)
        {
        <div class="item">
        <h3>@item.Item.NormalizedName</h3>
        <img src="@item.Item.Image512pxLink" width="124" height="124">
            <div class="data" style='display:inline-flex'>
                <a class="btn btn-primary" href="@Url.Action("DoMinusItem", "Tarkov", new {id = item.Id})">-</a>
                <p>@item.СollectedItemsCount</p>
                <p>/</p>
                <p>@item.Count</p>
                <a class="btn btn-primary" href="@Url.Action("DoPlusItem", "Tarkov", new {id = item.Id})">+</a>
            </div>
        </div>
        }
</div>
